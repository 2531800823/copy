{
  "name": "desktop",
  "version": "0.0.14",
  "private": true,
  "description": "Electron desktop application",
  "author": "2531800823@qq.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/2531800823/copy.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "pnpm clean && chcp 65001 >nul 2>&1 && vite",
    "clean": "rimraf dist-electron",
    "build": "pnpm clean && tsc && vite build && electron-builder",
    "build:dir": "tsc && vite build && electron-builder --config ./electron-builder.js --dir",
    "build:win": "tsc && vite build && electron-builder --config ./electron-builder.js --win nsis && pnpm release",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "publish": "tsc && vite build && electron-builder --publish always",
    "publish:win": "tsc && vite build && electron-builder --win --publish always",
    "publish:mac": "tsc && vite build && electron-builder --mac --publish always",
    "publish:linux": "tsc && vite build && electron-builder --linux --publish always",
    "preview": "vite preview",
    "release": "node scripts/update-github.js",
    "release:draft": "node scripts/update-github.js --draft",
    "release:prerelease": "node scripts/update-github.js --prerelease",
    "test:env": "node scripts/test-env.js",
    "fix:tag": "node scripts/fix-git-tag.js",
    "fix:tag:delete": "node scripts/fix-git-tag.js --delete",
    "check:permissions": "node scripts/check-permissions.js"
  },
  "dependencies": {
    "electron-store": "10.0.1",
    "electron-updater": "6.1.7",
    "fs-extra": "^11.3.1",
    "inversify": "^7.7.0",
    "lodash-es": "4.17.21",
    "log4js": "6.9.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@octokit/rest": "21.1.1",
    "@types/lodash-es": "4.17.12",
    "electron": "35.1.5",
    "electron-builder": "25.1.8",
    "png-to-ico": "^2.1.8",
    "typescript": "5.8.3",
    "vite": "6.3.1",
    "vite-plugin-electron": "0.28.6",
    "vite-plugin-electron-renderer": "0.14.5"
  }
}
